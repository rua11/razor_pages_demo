@page
@model razor_demo.Pages.OfitCategoryViews.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>OfitCategory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" id="category-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="OfitCategory.CompanyId" class="control-label"></label>
                <select asp-for="OfitCategory.CompanyId" class="form-control" asp-items="ViewBag.CompanyId">
                </select>
            </div>

            <div class="form-group">
                <label asp-for="OfitCategory.Name" class="control-label"></label>
                <input asp-for="OfitCategory.Name" class="form-control" />
                <span asp-validation-for="OfitCategory.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="OfitCategory.ParentId" class="control-label" ></label>
                <select asp-for="OfitCategory.ParentId" class="form-control" asp-items="ViewBag.ParentId">
                    <option value="">-- None --</option> <!-- Option for no selection -->
                </select>
            </div>

            <div class="form-group">
                <label asp-for="OfitCategory.Type" class="control-label"></label>
                <select asp-for="OfitCategory.Type" class="form-control" asp-items="Model.CategoryTypes" style="user-select: none;">
                </select>
                <span asp-validation-for="OfitCategory.Type" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input check_default_box" asp-for="OfitCategory.IsActive" /> @Html.DisplayNameFor(model => model.OfitCategory.IsActive)
                </label>
            </div>

            <div class="form-group">
                <label asp-for="OfitCategory.Description" class="control-label"></label>
                <input asp-for="OfitCategory.Description" class="form-control" />
                <span asp-validation-for="OfitCategory.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Điều kiện chỉ đọc
        var isChecked = @Model.IsChecked.ToString().ToLower();
        if (isChecked) {
            // Vô hiệu hóa tất cả các trường input và textarea
            const checkbox = document.querySelector('.check_default_box')
            checkbox.setAttribute('checked', 'checked');
        }
    </script>
}
